# Aurora Platform - Centralized Environment Configuration
# Copy this file to .env and update with your actual values

# === AURORA CORE CONFIGURATION ===

# Database Configuration
DATABASE_URL=postgresql://aurora_user:aurora_pass@aurora-postgres:5432/aurora_db
# Alternative for development with SQLite:
# DATABASE_URL=sqlite:///./aurora_platform.db

# Security Configuration
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# === AI SERVICES CONFIGURATION ===

# Google AI Services
GEMINI_API_KEY=your-gemini-api-key-here
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_CLOUD_LOCATION=us-central1

# DeepSeek AI
DEEPSEEK_API_KEY=your-deepseek-api-key-here

# Firecrawl for Web Scraping
FIRECRAWL_API_KEY=your-firecrawl-api-key-here

# Azure OpenAI (Optional)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name
OPENAI_API_VERSION=2024-02-01

# === INFRASTRUCTURE SERVICES ===

# Redis Configuration
REDIS_URL=redis://aurora-redis:6379/0
REDIS_HOST=aurora-redis
REDIS_PORT=6379
REDIS_DB=0

# ChromaDB Configuration
CHROMA_HOST=aurora-chromadb
CHROMA_PORT=8000

# === APPLICATION SETTINGS ===

# Project Information
PROJECT_NAME=Aurora Platform
PROJECT_VERSION=1.0.0

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://app.aurora.com,https://staging.aurora.com

# Security Settings
HTTPS_ONLY=false
MIN_PASSWORD_LENGTH=8
REQUIRE_UPPERCASE=true
REQUIRE_LOWERCASE=true
REQUIRE_NUMBERS=true
REQUIRE_SPECIAL_CHARS=true

# Rate Limiting
LOGIN_RATE_LIMIT_PER_MINUTE=5
RATE_LIMIT_PER_MINUTE=20
RATE_LIMIT_ANON=100/hour
RATE_LIMIT_AUTH=1000/hour

# === MONITORING & OBSERVABILITY ===

# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn@o123456.ingest.sentry.io/123456
ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# === DEVELOPMENT SETTINGS ===

# Development Mode
DEBUG=false
TESTING=false

# Azure KeyVault (Production)
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# === DOCKER COMPOSE OVERRIDES ===

# PostgreSQL Database (for docker-compose)
POSTGRES_DB=aurora_db
POSTGRES_USER=aurora_user
POSTGRES_PASSWORD=aurora_pass

# Additional Environment Variables for Services
ANONYMIZED_TELEMETRY=false