{
    "name": "Aurora Crawler POC Dev",
    "dockerComposeFile": "../docker-compose.yml",
    "service": "app",
    "workspaceFolder": "/app",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.black-formatter",
                "njpwerner.autodocstring"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/app/.venv/bin/python",
                "python.formatting.provider": "black",
                "editor.formatOnSave": true
            }
        }
    },
    // Comando executado após o contêiner ser criado para garantir que tudo está instalado
    "postCreateCommand": "poetry install",

    // Mantém o contêiner rodando mesmo após fechar o VSCode
    "shutdownAction": "none"
}