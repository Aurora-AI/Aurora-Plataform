[[tool.poetry.source]]
name = "pytorch-cpu"
url = "https://download.pytorch.org/whl/cpu"
priority = "explicit"
# Black configuration
[tool.black]
line-length = 88
target-version = ['py313']
include = '\.pyi?$'
exclude = '''
/(
    \.git|
    \.hg|
    \.mypy_cache|
    \.tox|
    \.venv|
    _build|
    buck-out|
    build|
    dist
)/
'''
[tool.poetry]
name = "aurora-router-poc"
version = "0.1.0"
description = "Prova de Conceito (POC) do AuroraRouter, um sistema de orquestração para IA Híbrida."
authors = ["Rodrigo Cesar Winhaski <rodrigo@auroracrm.com.br>"]
license = "MIT"
readme = "README.md"
packages = [
    { include = "aurora_platform", from = "src" }
]

[tool.poetry.dependencies]
uvicorn = {extras = ["standard"], version = "^0.29.0"}
python = "^3.11"
fastapi = "*"
python-jose = {extras = ["cryptography"], version = "*"}
passlib = {extras = ["bcrypt"], version = "*"}
python-multipart = "*"
transformers = "^4.41.0"
sentence-transformers = "*"
chromadb = "*"
requests = "*"
pypdf2 = "*"
beautifulsoup4 = "*"
aiofiles = "*"
aiohttp = "*"
httpx = "*"
urllib3 = "^2.5.0"
openai-whisper = "*"
ffmpeg-python = "*"
pymupdf = "*"
python-docx = "*"
langchain = "^0.3.26"
bcrypt = "^4.3.0"
playwright = "^1.42.0"
cryptography = "^42.0.0"
alembic = "^1.16.4"
sqlmodel = "^0.0.24"
trafilatura = "^2.0.0"
pybreaker = "^1.4.0"
pandas = "^2.3.1"
openpyxl = "^3.1.5"
xlrd = "^2.0.2"
2captcha-python = "^1.5.1"
apscheduler = "^3.11.0"
pytest-asyncio = "^1.1.0"
langchain-community = "^0.3.27"
rank-bm25 = "^0.2.2"
torch = {version = "^2.7.1", source = "pytorch-cpu"}

[tool.poetry.group.dev.dependencies]
pytest = "*"
pytest-asyncio = "*"
httpx = "*"
pre-commit = "^4.2.0"

[tool.poetry.group.server]
optional = true

[tool.poetry.group.server.dependencies]
chromadb = "*"

[build-system]
requires = ["poetry-core"]
build-backend = "poetry.core.masonry.api"
